{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": [2, "never"],
    "arrow-parens": ["error", "as-needed"],
    "no-trailing-spaces": "error",
    "space-in-parens": ["error", "never"]
  }
}
